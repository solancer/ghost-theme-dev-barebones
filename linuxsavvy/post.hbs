{{!< default}}
<main class="main_linuxsavvy" role="main">
{{#post}}
<article class="article_linuxsavvy" role="article" itemscope itemtype="http://schema.org/Article">
<header class="postheader_linuxsavvy">
<time class="date_linuxsavvy" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time>
<h1 class="posttitle_linuxsavvy" itemprop="headline">{{title}}</h1>
</header>
<div class="postcontent_linuxsavvy" itemprop="articleBody">
{{content}}
</div>
{{#if tags}}
<div class="posttags_linuxsavvy">
Tags: {{tags separator=" | "}}
</div>
{{/if}}
    <div class="sharepost_linuxsavvy">
    <h4 class="share_linuxsavvy">Share this post: &nbsp;</h4>
    <a class="share_linuxsavvy icon-twitter" target="_blank" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"><span class="hidethis_linuxsavvy">Twitter</span></a>
    <a class="share_linuxsavvy icon-facebook" target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}"><span class="hidethis_linuxsavvy">Facebook</span></a>
    <a class="share_linuxsavvy icon-gplus" target="_blank" href="https://plus.google.com/share?url={{url absolute="true"}}"><span class="hidethis_linuxsavvy">Google+</span></a>
    </div>
        {{#if author}}
        <footer class="postfooter_linuxsavvy">
            <address itemscope itemtype="http://schema.org/Person">
                {{#if author.image}}
                    <div class="authorimage_linuxsavvy"><img src="{{author.image}}" itemprop="image" /></div>
                    {{/if}}
                        <h4 class="authorname_linuxsavvy"><span itemprop="author">{{author.name}}</span></h4>
                    {{#if author.website}}
                    <div class="authorwebsite_linuxsavvy"><a href="{{author.website}}" itemprop="url">{{author.website}}</a></div>
                {{/if}}
            </address>
            {{! Author Bio}}
            <div class="authorbio_linuxsavvy">
                <p>{{author.bio}}</p>
            </div>
        </footer>
        {{/if}}
</article>
{{/post}}
{{#if pagination}}
    <div class="pagination_linuxsavvy">
        {{{pagination}}}
    </div>
{{/if}}
</main>