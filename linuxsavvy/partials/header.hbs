<div role='banner' class="header_linuxsavvy">
	{{#if @blog.logo}}
		<a class="logo_linuxsavvy" href="{{@blog.url}}">
			<img src="{{@blog.logo}}" alt="{{@blog.title}}" />
		</a>
	{{/if}}
	<h1 class="blogtitle_linuxsavvy">
		<a title="{{@blog.title}}" href='{{@blog.url}}'>
			{{{@blog.title}}}
		</a>
	</h1>
	<p class="blogdescription_linuxsavvy">
		<a title="{{@blog.title}}" href='{{@blog.url}}'>
			{{@blog.description}}
		</a>
	</p>
</div>